<% content_for :title do %>
  Restaurantes
<% end %>
<table class="table">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.restaurant.name') %></th>
      <th><%= t('activerecord.attributes.restaurant.price') %></th>
      <th><%= t('activerecord.attributes.restaurant.latitude') %></th>
      <th><%= t('activerecord.attributes.restaurant.longitude') %></th>
      <th width="150"></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= restaurant.longitude %></td>
        <td>
          <%= link_to restaurant_menus_path(restaurant), class: 'btn btn-primary btn-xs' do %>
            <span class="glyphicon glyphicon-th-list"></span>
          <% end %>
          <%= link_to restaurant, class: 'btn btn-primary btn-xs' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
          <%= link_to edit_restaurant_path(restaurant), class: 'btn btn-primary btn-xs' do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to restaurant, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-primary btn-xs' do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to new_restaurant_path, class: 'btn btn-primary btn-md' do %>
  <span class="glyphicon glyphicon-plus"></span> Novo Restaurante
<% end %>
