<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Dish</th>
      <th>Weekday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurant.name %></td>
        <td><%= menu.dish %></td>
        <td><%= menu.weekday %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_restaurant_menu_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
